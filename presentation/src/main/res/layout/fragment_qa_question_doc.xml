<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
                name="vm"
                type="com.mohaeyo.mohae.viewmodel.main.qa.questionDoc.QAQuestionDocViewModel"/>
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <ScrollView
                android:id="@+id/qa_question_doc_srv"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/qa_question_doc_title_tv"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginTop="36dp"
                        android:fontFamily="@font/nanum_square_otf_bold"
                        android:lineSpacingExtra="2sp"
                        android:text="@string/qa_question_doc_title_tv"
                        android:textSize="20sp"
                        android:textColor="@color/colorNightBlack"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                <androidx.cardview.widget.CardView
                        app:cardCornerRadius="14dp"
                        app:cardElevation="14dp"
                        android:layout_marginHorizontal="24dp"
                        android:layout_marginTop="36dp"
                        android:id="@+id/qa_question_doc_title_card"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/qa_question_doc_title_tv"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">
                    <com.google.android.material.textfield.TextInputLayout
                            android:layout_margin="10dp"
                            app:counterEnabled="true"
                            app:counterMaxLength="12"
                            app:errorEnabled="true"
                            app:hintTextColor="@color/colorQa"
                            app:boxStrokeColor="@color/colorQa"
                            android:id="@+id/qa_question_doc_title_edit_lay"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        <com.google.android.material.textfield.TextInputEditText
                                android:singleLine="true"
                                android:id="@+id/qa_question_doc_title_edit"
                                android:fontFamily="@font/nanum_square_otf_bold"
                                android:hint="@string/qa_question_doc_title_edit"
                                android:textColor="@color/colorNightBlack"
                                android:maxLength="12"
                                android:textColorHint="@color/colorDefault"
                                android:textSize="14sp"
                                android:text="@={vm.questionModel.title}"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                    </com.google.android.material.textfield.TextInputLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                        app:cardCornerRadius="14dp"
                        app:cardElevation="14dp"
                        android:layout_marginHorizontal="24dp"
                        android:layout_marginTop="24dp"
                        android:id="@+id/qa_question_doc_summary_card"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/qa_question_doc_title_card"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">

                    <com.google.android.material.textfield.TextInputLayout
                            android:layout_margin="10dp"
                            app:counterEnabled="true"
                            app:counterMaxLength="28"
                            app:errorEnabled="true"
                            app:hintTextColor="@color/colorQa"
                            app:boxStrokeColor="@color/colorQa"
                            android:id="@+id/qa_question_doc_summary_edit_lay"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        <com.google.android.material.textfield.TextInputEditText
                                android:singleLine="true"
                                android:id="@+id/qa_question_doc_summary_edit"
                                android:fontFamily="@font/nanum_square_otf_bold"
                                android:hint="@string/qa_question_doc_summary_edit"
                                android:textColor="@color/colorNightBlack"
                                android:maxLength="28"
                                android:textColorHint="@color/colorDefault"
                                android:textSize="14sp"
                                android:text="@={vm.questionModel.summary}"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                    </com.google.android.material.textfield.TextInputLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                        android:onClick="@{() -> vm.clickSetImage()}"
                        app:cardCornerRadius="14dp"
                        app:cardElevation="14dp"
                        android:layout_marginHorizontal="24dp"
                        android:layout_marginTop="24dp"
                        android:id="@+id/qa_question_doc_image_card"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/qa_question_doc_summary_card"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">

                    <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        <androidx.appcompat.widget.AppCompatTextView
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                android:layout_margin="10dp"
                                android:id="@+id/qa_question_doc_image_tv"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:fontFamily="@font/nanum_square_otf_bold"
                                android:gravity="center"
                                android:hint="@string/qa_question_doc_image_tv"
                                android:lineSpacingExtra="2sp"
                                android:padding="14dp"
                                android:textSize="14sp" />

                        <androidx.appcompat.widget.AppCompatImageView
                                app:setImage="@{vm.questionModel.imageFile}"
                                android:id="@+id/qa_question_doc_image_imv"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                        app:cardCornerRadius="14dp"
                        app:cardElevation="14dp"
                        android:layout_marginHorizontal="24dp"
                        android:layout_marginTop="24dp"
                        android:layout_marginBottom="54dp"
                        android:id="@+id/qa_question_doc_description_card"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/qa_question_doc_image_card"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">

                    <com.google.android.material.textfield.TextInputLayout
                            android:layout_margin="10dp"
                            app:counterEnabled="true"
                            app:counterMaxLength="200"
                            app:errorEnabled="true"
                            app:hintTextColor="@color/colorQa"
                            app:boxStrokeColor="@color/colorQa"
                            android:id="@+id/qa_question_doc_description_edit_lay"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        <com.google.android.material.textfield.TextInputEditText
                                android:inputType="textMultiLine"
                                android:id="@+id/qa_question_doc_description_edit"
                                android:fontFamily="@font/nanum_square_otf_bold"
                                android:hint="@string/qa_question_doc_description_edit"
                                android:textColor="@color/colorNightBlack"
                                android:maxLength="200"
                                android:maxLines="6"
                                android:textColorHint="@color/colorDefault"
                                android:textSize="14sp"
                                android:text="@={vm.questionModel.description}"
                                android:layout_width="match_parent"
                                android:layout_height="180dp"/>
                    </com.google.android.material.textfield.TextInputLayout>
                </androidx.cardview.widget.CardView>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/qa_question_doc_back_fab"
                android:onClick="@{() -> vm.clickDocToList()}"
                android:layout_margin="16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:backgroundTint="@color/colorQa"
                app:borderWidth="0dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:fabSize="normal"
                app:tint="@null"
                app:srcCompat="@drawable/ic_arrow_back"/>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/qa_question_doc_post_fab"
                android:onClick="@{() -> vm.clickPostQuestion()}"
                android:layout_margin="16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:backgroundTint="@color/colorQa"
                app:borderWidth="0dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:fabSize="normal"
                app:tint="@null"
                app:srcCompat="@drawable/ic_check"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>